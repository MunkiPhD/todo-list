<% if @item.errors.any? %>  
  <div class="error-explanation">  
  <h2>Errors</h2>
    <ul>  
      <% @item.errors.full_messages.each do |msg| %>  
        <li><%= msg %></li>  
      <% end %>  
    </ul>
  </div>
<% end %>
<%= form_for(@item) do |f| %>
  <%= f.text_field :description, :placeholder => "What do you need to do?" %>
<%= f.submit %>
<% end %>
