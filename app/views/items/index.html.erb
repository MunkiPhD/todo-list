<div class="items-index">
  <h1>To-Do List</h1>
  <% unless @items.count == 0 %>
    <ul id="item-container">
    <% @items.each do |item| %>
      <li id=<%= "item_#{item.id}" %>><%= render "item_display", item: item %>
    <% end %>
    </ul>
  <% else %>
    <h3>No items on your to-do list!</h3>
<% end %>
  <%= link_to "Add new to-do item", new_item_path %>
</div>
